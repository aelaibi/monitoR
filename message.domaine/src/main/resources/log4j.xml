<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- 1) Logguer dans console Console -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<!--  <layout class="org.apache.log4j.SimpleLayout" />-->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p %m %n" />
		</layout>
	</appender>
	<appender name="fichier_quotidien" class="org.apache.log4j.DailyRollingFileAppender">
		<!--  <layout class="org.apache.log4j.SimpleLayout" />-->
		<param name="file" value="/tmp/message_daily_log.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %-5p %m %n" />
		</layout>
	</appender>


	<!-- 2) Config Logs -->
	
	<logger name="org.apache.log4j" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="console" />
		<appender-ref ref="fichier_quotidien" />
	</logger>
	<logger name="org.hibernate" additivity="false">
		<level value="ERROR" />
		<appender-ref ref="console" />
		<appender-ref ref="fichier_quotidien" />
	</logger>
	<logger name="net.sf.ehcache" additivity="false">
		<level value="FATAL" />
		<appender-ref ref="console" />
		<appender-ref ref="fichier_quotidien" />
	</logger>
	<logger name="org.springframework" additivity="false">
		<level value="WARN" />
		<appender-ref ref="console" />
		<appender-ref ref="fichier_quotidien" />
	</logger>
	<logger name="springframework.beans" additivity="false">
		<level value="WARN" />
		<appender-ref ref="console" />
		<appender-ref ref="fichier_quotidien" />
	</logger>
	<logger name="xwork2.util" additivity="false">
		<level value="WARN" />
		<appender-ref ref="console" />
		<appender-ref ref="fichier_quotidien" />
	</logger>

	<!-- 3) Config Logs racine -->
	<root>
		<level value="DEBUG" />
		<appender-ref ref="console" />
		<appender-ref ref="fichier_quotidien" />
	</root>
</log4j:configuration>